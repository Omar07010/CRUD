<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <!-- message li ghantl3oh f page index fash ndiro add (seccess) -->
             <% if (message) { %>
              <div class="alert alert-dismissible fade show alert-<% message.type %> alert-success" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                <strong><%= message.message %></strong>
              </div>
             <% } %>
            <div class="table responsive">
                <% if (result != '') { %>
                    <table class="table table-dtriped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th>ID</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>E-Mail</th>
                                <th>Phone</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% result.forEach((item, index) => { %>
                                <tr class="align-middle">
                                    <td><%= index + 1 %></td>
                                    <td><img src="<%= item.image %>" width="50" class="img-thumbnail"></td>
                                    <td><%= item.name %></td>
                                    <td><%= item.email %></td>
                                    <td><%= item.phone %></td>
                                    <td>

                                        <a href="/edit/<%= item.id %>" class="text-seccess"><i class="fa fa-edit fa-lg mx-1"></i></a>
                                        
                                        <a href="/delete/<%= item.id %>" class="text-danger"><i class="fa fa-trash fa-lg mx-1"></i></a>
                        
                                    </td>
                                </tr>
                            <% }) %>
                            
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found!</h1>
                <% } %>
                     
                
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>